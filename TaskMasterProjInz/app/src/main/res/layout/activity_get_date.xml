<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/get_date_layout"
    android:background="@color/bardzo_jasniutki">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/header_layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@mipmap/clear_task"
            android:text="@string/cancel_button"
            style="@android:style/Holo.ButtonBar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/clear_task_button"
            android:clickable="true"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_picker_dialog_title"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:textColor="@color/my_text"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/create_label"
            />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/add_task"
            android:scaleType="center"
            style="@android:style/Holo.ButtonBar"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/save_task_button"
            android:clickable="true"
            />


    </RelativeLayout>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:id="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="true"
        android:spinnersShown="false"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:yearListSelectorColor="@color/ciemniejszy"
        android:dayOfWeekBackground="@color/ciemniejszy"
        android:calendarTextColor="@color/ciemniejszy"
        android:dayOfWeekTextAppearance="@color/ciemniejszy"
        android:background="@color/bardzo_jasniutki"
    />




</RelativeLayout>
